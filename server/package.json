{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend - Express + Sequelize + APIBrasil + ChatGPT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"ts-node --transpile-only src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "ts-node src/migrate.ts up",
    "migrate:down": "ts-node src/migrate.ts down",
    "migrate:status": "ts-node src/migrate.ts status"
  },
  "dependencies": {
    "apigratis-sdk-nodejs": "^0.1.6",
    "axios": "^1.6.7",
    "cloudflared": "^0.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.7.1",
    "node-cron": "^3.0.3",
    "openai": "^4.28.0",
    "sequelize": "^6.35.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
